<h3>Your Account Info</h3>
<div class="profile-view-wrapper">


	<div class="profile-page-avatar-div">
		<img src="<%= @user.avatar %>" alt="profile image" class="profile-page-avatar">
	</div>


	<table class="profile-table">
		<tr>
			<td>First Name:</td>
			<td class="table-column-2"><%= @user.first_name %></td>
		</tr>
		<tr>
			<td>Last Name:</td>
			<td class="table-column-2"><%= @user.last_name %></td>
		</tr>
		<tr>
			<td>Email:</td>
			<td class="table-column-2"><%= @user.email %></td>
		</tr>
		<tr>
			<td>Birthdate:</td>
			<td class="table-column-2">
				<% if @user.birthday %>
					<%= @user.birthday %>
				<% end %>
			</td>
		</tr>

	</table>


<p><%= link_to "Edit Account Info", edit_user_path(@user) %></p>

</div> <!-- close profile-view-wrapper -->